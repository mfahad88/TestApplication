<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="400dp"
                android:height="100dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="line">
            <stroke
                android:width="10dp"
                android:color="@color/ratingBar" />

        </shape>
    </item>

    <item
        android:right="0dp"
        android:left="0dp"
        android:gravity="center_horizontal">
        <layer-list>
            <item android:drawable="@drawable/circle_shape_selected" android:width="100dp" />
            <item android:drawable="@drawable/ic_check_black" android:width="100dp" />
        </layer-list>
    </item>




</layer-list>